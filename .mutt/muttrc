#
# absolute stuff
#

# mail
set mail_check = 10
set imap_check_subscribed
unset imap_passive
set imap_keepalive = 10
set auto_tag = yes
set timeout = 10
#set imap_pipeline_depth = 0

# files
set header_cache = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set certificate_file = ~/.mutt/certificates
source ~/.mutt/addrbook
set alias_file = ~/.mutt/addrbook

# edit
set charset = "utf-8"
set edit_headers = yes
set autoedit = yes
set include = yes
set recall = no

# look
source ~/.mutt/colors
set pager_context = 1
set pager_index_lines = 20
set pager_stop = yes
set markers=no
set rfc2047_parameters = yes
set sort = threads
set sort_aux = last-date-received
set wait_key = no
folder-hook . 'push <collapse-all>'
set index_format = "%C %4M %Z %[%a %b %d %Y %H:%M] %-20.20L (%4c) %s"

ignore    *
unignore  from to cc date subject x-mailer user-agent x-url
hdr_order from to cc date subject x-mailer user-agent

alternative_order text/plain
auto_view text/html text/calendar

# hooks

# keys
macro pager         \Cb     |urlview\n 'call urlview to extract URLs out of a message'
bind  index,pager   ^       imap-fetch-mail
macro index         -       <Esc>v 'collapse thread'
macro index,pager   y       c?<Tab>
bind  index         /       search-reverse
bind  index         <Esc>/  search

#
# server-dependent stuff
#

# secrets be here
source ~/.mutt/pw
