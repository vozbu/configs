[color]
    ui = auto
[pager]
    branch = false
[diff]
    renamelimit = 0
    tool = meld
[difftool]
    prompt = false
[merge]
    conflictstyle = diff3
    ff = false
[pack]
    threads = 4
[user]
    name = Valeriy Bykov
    email = valery.bickov@gmail.com
[core]
#    autocrlf = input
    excludesfile = ~/.gitignore_global
    quotepath = false
[push]
    default = current
[gui]
    fontui = -family \"Liberation Mono\" -size 11 -weight normal -slant roman -underline 0 -overstrike 0
    fontdiff = -family \"Liberation Mono\" -size 11 -weight normal -slant roman -underline 0 -overstrike 0
[help]
    autocorrect = -1
[pull]
    ff = true
[log]
    follow = true
[fetch]
    recurseSubmodules = true
[rebase]
    autoSquash = true
    autoStash = true
[grep]
    threads = 4
