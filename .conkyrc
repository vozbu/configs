 Address: ${addrs \1} ($nodename)$endif]],
   template3 = [[${if_existing /dev/\1}
 ${color3}\2$color ${diskio_read \1}          ${color3}\2$color ${diskio_write \1}
 ${diskiograph_read \1 30,200}${alignr}${diskiograph_write \1 30,200}$endif]],
   template4 = [[${if_mounted \1}
 ${color2}\2$color ${alignr}${fs_free \1} ${fs_bar 10,220 \1}$endif]],
   update_interval = 1.0,
   uppercase = false,
   use_spacer = 'right',
   use_xft = true,
};

